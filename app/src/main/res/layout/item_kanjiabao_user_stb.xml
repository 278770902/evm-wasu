<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@android:color/white"
    android:layout_height="51dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/kanJiaBaoUserBgConstraintLayoutId"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:background="@drawable/layer_kanjiabao_user_stb_bg_false">

        <ImageView
            android:id="@+id/kanJiaBaoUserNameImageViewId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/svg_kanjiabao_user_on_stb_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kanJiaBaoUserNameTextViewId"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:text="用户啊1234000"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/kanJiaBaoUserNameImageViewId"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
